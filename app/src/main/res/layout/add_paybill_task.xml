<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_bg">

    <EditText
        android:id="@+id/evTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:autofillHints="Write the title"
        android:backgroundTint="@color/text"
        android:hint="Write the title"
        android:minHeight="48dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/text"
        android:textColorHint="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/evBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/evBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/text"
        android:hint="Write the body"
        android:textColorHint="@color/text"
        android:minHeight="48dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@id/lowerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

    <LinearLayout
        android:id="@+id/lowerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/cardBg"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_extrabold"
            android:textColor="@color/text"
            android:text="Save"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/red"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_extrabold"
            android:textColor="@color/text"
            android:text="Delete"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>